# Kuwait Social AI - Environment Configuration
# Copy this to .env and fill in your values

# === DOMAIN CONFIGURATION ===
DOMAIN=your-domain.com
ADMIN_EMAIL=admin@your-domain.com

# === SECURITY KEYS ===
# Generated automatically during deployment
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-here

# === DATABASE ===
DB_USER=kuwait_user
DB_PASSWORD=your-secure-password
DATABASE_URL=postgresql://kuwait_user:your-secure-password@postgres:5432/kuwait_social_ai

# === REDIS ===
REDIS_PASSWORD=your-redis-password
REDIS_URL=redis://:your-redis-password@redis:6379/0

# === ADMIN ACCOUNT ===
ADMIN_USERNAME=admin@kuwait-social-ai.com
ADMIN_PASSWORD=your-admin-password

# === SOCIAL MEDIA APIs ===
# Instagram
INSTAGRAM_CLIENT_ID=
INSTAGRAM_CLIENT_SECRET=
INSTAGRAM_ACCESS_TOKEN=

# Snapchat
SNAPCHAT_CLIENT_ID=
SNAPCHAT_CLIENT_SECRET=
SNAPCHAT_ACCESS_TOKEN=

# TikTok
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=

# Twitter/X
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=

# === AI SERVICES ===
# OpenAI
OPENAI_API_KEY=

# Google Cloud
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_APPLICATION_CREDENTIALS=/app/google-credentials.json

# === PAYMENT GATEWAY ===
# MyFatoorah (Kuwait)
MYFATOORAH_API_KEY=
MYFATOORAH_API_URL=https://api.myfatoorah.com
MYFATOORAH_COUNTRY_ISO=KWT

# === EMAIL CONFIGURATION ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# === KUWAIT SPECIFIC ===
# Prayer Times API
PRAYER_API_KEY=
PRAYER_API_URL=https://api.aladhan.com/v1/timings

# Weather API
WEATHER_API_KEY=
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# === SECURITY SETTINGS ===
SECURE_HEADERS_ENABLED=true
FORCE_HTTPS=true
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
CORS_ORIGINS=https://your-domain.com

# === RATE LIMITING ===
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=1000 per hour
RATE_LIMIT_AUTH=5 per minute

# === DIGITALOCEAN SPECIFIC ===
# For monitoring and backups
DO_API_TOKEN=
DROPLET_ID=

# S3-compatible Spaces for backups (optional)
DO_SPACES_KEY=
DO_SPACES_SECRET=
DO_SPACES_BUCKET=
DO_SPACES_REGION=fra1

# === APPLICATION SETTINGS ===
FLASK_ENV=production
FLASK_DEBUG=false
LOG_LEVEL=INFO
WORKERS=4

# === FEATURE FLAGS ===
ENABLE_REGISTRATION=true
ENABLE_AI_FEATURES=true
ENABLE_COMPETITOR_ANALYSIS=true
ENABLE_VIDEO_CREATION=true
MAINTENANCE_MODE=false