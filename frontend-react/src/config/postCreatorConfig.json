{
  "appTitle": "Kuwait Social AI - Smart Post Creator",
  "version": "1.0.0",
  "defaultLanguage": "en",
  "promptsData": {
    "dishPromotion": {
      "id": "dishPromotion",
      "title": "Dish Promotion",
      "icon": "🍽️",
      "prompts": {
        "fridayLunchSpecial": {
          "id": "fridayLunchSpecial",
          "title": "Friday Lunch Special",
          "prompt": "Create an enticing Instagram post for a Friday lunch special featuring {{dishName}} at {{restaurantName}} in {{location}}. The dish is {{dishDescription}} and costs {{price}} KD. Emphasize the weekend vibes and family gathering aspect typical of Kuwaiti Fridays. Include relevant emojis and a call to action.",
          "inputs": [
            {
              "id": "dishName",
              "label": "Dish Name",
              "type": "text",
              "placeholder": "e.g., Machboos Laham",
              "required": true
            },
            {
              "id": "dishDescription",
              "label": "Dish Description",
              "type": "textarea",
              "placeholder": "Brief description of the dish",
              "required": true
            },
            {
              "id": "restaurantName",
              "label": "Restaurant Name",
              "type": "text",
              "placeholder": "Your restaurant name",
              "required": true
            },
            {
              "id": "location",
              "label": "Location",
              "type": "text",
              "placeholder": "e.g., Salmiya, Kuwait City",
              "required": true
            },
            {
              "id": "price",
              "label": "Price (KD)",
              "type": "number",
              "placeholder": "e.g., 4.5",
              "required": true
            }
          ]
        },
        "newDishLaunch": {
          "id": "newDishLaunch",
          "title": "New Dish Launch",
          "prompt": "Generate an exciting announcement post for a new dish {{dishName}} launching at {{restaurantName}}. The dish features {{ingredients}} and is {{cuisine}} cuisine. Price: {{price}} KD. Create buzz and curiosity while highlighting what makes this dish unique.",
          "inputs": [
            {
              "id": "dishName",
              "label": "New Dish Name",
              "type": "text",
              "required": true
            },
            {
              "id": "ingredients",
              "label": "Key Ingredients",
              "type": "text",
              "placeholder": "e.g., saffron, cardamom, tender lamb",
              "required": true
            },
            {
              "id": "cuisine",
              "label": "Cuisine Type",
              "type": "select",
              "options": ["Kuwaiti", "Lebanese", "Indian", "Italian", "Asian", "International"],
              "required": true
            },
            {
              "id": "restaurantName",
              "label": "Restaurant Name",
              "type": "text",
              "required": true
            },
            {
              "id": "price",
              "label": "Price (KD)",
              "type": "number",
              "required": true
            }
          ]
        }
      }
    },
    "eventPromotion": {
      "id": "eventPromotion",
      "title": "Event Promotion",
      "icon": "🎉",
      "prompts": {
        "ramadanIftar": {
          "id": "ramadanIftar",
          "title": "Ramadan Iftar Special",
          "prompt": "Create a warm, inviting post for Ramadan Iftar at {{restaurantName}}. Highlight the {{buffetOrSetMenu}} option priced at {{price}} KD per person. Mention special dishes like {{specialDishes}} and the spiritual ambiance. Include Ramadan greetings and encourage early bookings.",
          "inputs": [
            {
              "id": "restaurantName",
              "label": "Restaurant Name",
              "type": "text",
              "required": true
            },
            {
              "id": "buffetOrSetMenu",
              "label": "Menu Type",
              "type": "select",
              "options": ["Buffet", "Set Menu", "Both Options Available"],
              "required": true
            },
            {
              "id": "price",
              "label": "Price per Person (KD)",
              "type": "number",
              "required": true
            },
            {
              "id": "specialDishes",
              "label": "Special Dishes",
              "type": "text",
              "placeholder": "e.g., Harees, Thareed, Qatayef",
              "required": true
            }
          ]
        },
        "nationalDayOffer": {
          "id": "nationalDayOffer",
          "title": "National Day Celebration",
          "prompt": "Create a patriotic post celebrating Kuwait National Day at {{restaurantName}}. Offer: {{offerDetails}}. Express national pride and unity. Use Kuwait flag colors (🇰🇼) and patriotic language. Valid {{validityPeriod}}.",
          "inputs": [
            {
              "id": "restaurantName",
              "label": "Restaurant Name",
              "type": "text",
              "required": true
            },
            {
              "id": "offerDetails",
              "label": "Offer Details",
              "type": "textarea",
              "placeholder": "e.g., 26% discount on all meals",
              "required": true
            },
            {
              "id": "validityPeriod",
              "label": "Validity Period",
              "type": "text",
              "placeholder": "e.g., Feb 25-26",
              "required": true
            }
          ]
        }
      }
    },
    "engagement": {
      "id": "engagement",
      "title": "Customer Engagement",
      "icon": "💬",
      "prompts": {
        "weekendQuestion": {
          "id": "weekendQuestion",
          "title": "Weekend Engagement Question",
          "prompt": "Create an engaging weekend question post for {{restaurantName}} followers. Ask about their favorite {{topic}} in a fun, conversational way. Encourage comments and sharing. Include relevant emojis and create a sense of community.",
          "inputs": [
            {
              "id": "restaurantName",
              "label": "Restaurant Name",
              "type": "text",
              "required": true
            },
            {
              "id": "topic",
              "label": "Question Topic",
              "type": "select",
              "options": [
                "weekend breakfast spot",
                "family gathering dish",
                "dessert choice",
                "coffee preference",
                "traditional vs modern cuisine"
              ],
              "required": true
            }
          ]
        }
      }
    }
  },
