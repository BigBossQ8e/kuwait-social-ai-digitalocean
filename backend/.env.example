# Kuwait Social AI - Environment Variables Template
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# Database
DATABASE_URL=postgresql://user:password@localhost/kuwait_social_ai
SQLALCHEMY_DATABASE_URI=postgresql://user:password@localhost/kuwait_social_ai

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600

# AI API Keys
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
AI_PROVIDER=openai  # 'openai' or 'anthropic'

# CORS Settings
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# File Upload
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/api/telegram/webhook

# Kuwait Specific
KUWAIT_TIMEZONE=Asia/Kuwait
PRAYER_TIME_API_KEY=your-prayer-time-api-key

# Security
RATE_LIMIT_DEFAULT=100 per hour
BCRYPT_LOG_ROUNDS=12

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn

# Payment Gateway (Optional)
KNET_MERCHANT_ID=your-knet-merchant-id
KNET_API_KEY=your-knet-api-key

# Social Media API Keys (Future)
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret