# Backend Environment Variables
FLASK_APP=wsgi.py
FLASK_ENV=production
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/kuwait_social
DB_USER=kuwait_user
DB_PASSWORD=secure_password_here
DB_NAME=kuwait_social

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Email Configuration (optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Kuwait Specific APIs
PRAYER_TIMES_API_KEY=optional-if-required
KUWAIT_WEATHER_API_KEY=optional-if-required

# Security
# For production: Set to your actual frontend domain
# For development: Include localhost ports for React dev server
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# File Upload
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
UPLOAD_FOLDER=./uploads

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn-if-using

# Frontend URL (for CORS and email links)
FRONTEND_URL=https://yourdomain.com